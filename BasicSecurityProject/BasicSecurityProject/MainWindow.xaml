<Window x:Class="BasicSecurityProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BasicSecurityProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" WindowStartupLocation="CenterScreen">
    <Grid>
        <TabControl x:Name="typeEncryptionTabControl" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" TabStripPlacement="Top">
            <TabItem Header="Hybrid Encrypting">
                <local:HybridEncryptingGrid/>
            </TabItem>
            <TabItem Header="Stenografie">
                <local:StenografieGrid/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
